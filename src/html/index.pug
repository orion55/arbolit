extends block/main.layout.pug

block content
    .promo
        .promo__wrap.row
            .promo__wrapper.col-lg-10.col-lg-offset-1
                .promo__text Производство и доставка арболитовых блоков в Челябинской и Оренбургской области, а также в республике Башкортостан
            .promo__item.col-lg-8.col-lg-offset-2
                .promo__title Платите за отопление в
                    span.promo__separator
                    = ' раза меньше благодаря использованию арболитовых блоков при строительстве дома!'
                .promo_bigdigital 2
            .promo__item
                .promo__form
                    .bid__block
                        .bid__title Получите прайс-лист и
                        .bid__red бесплатную партию
                        .bid__title из блоков
                    form.form__bid(method="post" action="#" name="bid__form")
                        .bid_group
                            input.form__input(type="text" placeholder="Ваше имя" name="name")
                            input.form__input(type="text" placeholder="+7 000-000-00-00" name="phone")
                            input.form__input(type="email" placeholder="Ваш email" name="email")
                        button.btn.btn--bid.hvr-radial-out(type="submit") Оставить заявку
                .promo__symbol
                    .promo__row-1
                        .promo__contour
                            .promo-img.promo-img-01
                        .promo__lead Хвойные и лиственные породы особого размера
                    .promo__row-2
                        .promo-img.promo-img-02
                        .promo__slogan Производятся из экологически чистого материала
                        .promo__square
                        .promo-img.promo-img-03
                    .promo__row-3
                        .promo-img.promo-img-04

        .building.row
            each title, x in {1:'Бани', 2:'Гаражи', 3:'Коттеджи', 4:'Коттеджи'}
                a.building__picture.col-xs-3(href="#")
                    img.building__image(src="img/building/build0" + x + ".jpg" alt=title)
                    .building__title= title
    .manufacture
        .manufacture__wrap
            .manufacture__box.row
            each title, x in {1:'Экологически чистый материал', 2:'Собственный цех по производству', 3:'Согласно ГОСТ-19222-84', 4:'Контрольные образцы испытываются в лаборатории', 5:'Работаем на рынке строительных материалов с 2013 года', 6:'Автоматизированное производство снижает уровень брака на 99%'}
                .manufacture__container.col-xs-3
                    .manufacture-icon(class='manufacture-icon-1' + x)
                    .manufacture__title= title

            h2.manufacture__head Мы производим:
            .manufacture__holder
                .manufacture__item
                    img.manufacture__img01(src="img/manufacture/one.png" alt="one")
                    .manufacture__text.manufacture__text--one 50х40х20 см
                img.manufacture__img02(src="img/manufacture/block_one.png" alt="block_one")
                .manufacture__item
                    img.manufacture__img03(src="img/manufacture/two.png" alt="one")
                    .manufacture__text.manufacture__text--two 50х35х20 см
            .manufacture__holder.manufacture__holder--one
                img.manufacture__img04(src="img/manufacture/block_two.png" alt="block_two")
                .manufacture__subtitle Панели-перемычки: для перекрытия дверных и оконных проёмов
